<%= nested_form_for @poll do |f| %>

  <%= render 'error' %>

  <div class="field">
    <%= f.label :name, "Poll name" %><br>
    <%= f.text_field :name %>
  </div>

  <%= render 'entry_fields', :builder => f %>

  <div class="actions">
    <% if @poll.new_record? %>
      <%= f.submit "Create poll", :class => "btn btn-primary" %>
    <% else %>
      <%= f.submit "Update poll", :class => "btn btn-primary" %>
    <% end %>
  </div>

<% end %>
