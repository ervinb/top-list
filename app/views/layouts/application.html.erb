<!DOCTYPE html>
<html>
<head>
  <title>TopList</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-inverse" role="navigation">
    <%= link_to root_path, :class => "navbar-brand" do %>
      <span class="glyphicon glyphicon-sort-by-attributes"></span>
      <span>TopList</span>
    <% end %>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li><%= current_user.email %></li>
        <li>
          <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
        </li>
      <% else %>
        <li>
          <%= form_tag( user_session_path, :method => "post", :role => "form", :class => "navbar-form" ) do %>
            <%= text_field_tag "user[email]", nil, :placeholder => "Email" %>
            <%= password_field_tag "user[password]", nil, :placeholder => "Password" %>
            <%= submit_tag "Login", :class => "btn btn-regular btn-sm" %>
          <% end %>
        </li>
        <li>
          <%= link_to "Register", new_user_registration_path, :method => :get, :class => "btn btn-sm" %>
        </li>
      <%end %>
    </ul>
  </nav>

  <div class="container"
    <div class="row">
        <%= yield %>
  </div>

</body>
</html>
